{
  "name": "angular-electron",
  "version": "1.0.0",
  "description": "Quick start your desktop app using angular and electron.",
  "main": "main.js",
  "scripts": {
    "build": "yarn ng:build && yarn electron:build",
    "electron:build": "tsc -P tsconfig-electron.json",
    "electron:lint": "tslint -c tslint.json -p tsconfig-electron.json",
    "electron:test": "mocha",
    "lint": "yarn ng:lint && yarn electron:lint",
    "ng": "ng",
    "ng:build": "ng build",
    "ng:e2e": "yarn lint && ng e2e",
    "ng:lint": "ng lint",
    "ng:start": "ng serve",
    "ng:test": "ng test --watch=false",
    "prebuild": "yarn lint",
    "pretest": "yarn lint",
    "pretty": "prettier --config .prettierrc --write \"**/*{.ts,.js,.scss}\"",
    "start": "electron .",
    "test": "yarn ng:test && yarn electron:test"
  },
  "private": true,
  "repository": "https://github.com/AhmedMKamal/angular-electron",
  "author": "Ahmed M Kamal <en.ahmed.mk@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.4",
    "@angular/animations": "~7.1.0",
    "@angular/cli": "~7.1.4",
    "@angular/common": "~7.1.0",
    "@angular/compiler": "~7.1.0",
    "@angular/compiler-cli": "~7.1.0",
    "@angular/core": "~7.1.0",
    "@angular/forms": "~7.1.0",
    "@angular/language-service": "~7.2.7",
    "@angular/platform-browser": "~7.1.0",
    "@angular/platform-browser-dynamic": "~7.1.0",
    "@angular/router": "~7.1.0",
    "@types/app-root-path": "^1.2.4",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~11.10.4",
    "app-root-path": "^2.1.0",
    "codelyzer": "~4.5.0",
    "core-js": "^2.5.4",
    "electron": "4.0.7",
    "fs-extra": "^7.0.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "mocha": "^5.2.0",
    "ngx-electron": "^2.0.0",
    "prettier": "^1.15.3",
    "protractor": "~5.4.0",
    "rxjs": "~6.3.3",
    "spectron": "^5.0.0",
    "ts-node": "~7.0.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.6",
    "zone.js": "~0.8.29"
  }
}
